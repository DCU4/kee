


<%- include('partials/header',{savedBtn:false}) %>
<div id="splash"><div id="eyes"></div></div>
<div class="login-form">

  <section class="logo">
    <h1>Avnoe</h1>
    <div class="logo-full">
      <span id="isual" class="logo-bit"></span>
      <span id="ote" class="logo-bit"></span>
      <span id="f" class="logo-bit"></span>
      <span id="motion" class="logo-bit"></span>
    </div>
  </section>

  <span class="line"></span>

  <section class="forms">
    <h2 id="login-show-btn" class="form-title">Sign In</h2>
    <form id="login" action="/login" method="POST">
        <h3>Username</h3>
        <input type="text" name="username" placeholder="username">
        <h3>Password</h3>
        <input type="password" name="password" placeholder="password">
        <button>Sign In</button>
    </form>

    <h2 id="register-show-btn" class="form-title">New Account</h2>
    <form id="register" action="/register" method="POST">
      <h3>Username</h3>
      <input type="text" name="username" placeholder="username">
      <h3>Password</h3>
      <input type="password" name="password" placeholder="password">
      <button>Create an account</button>
    </form>
    
    </section>
</div>


